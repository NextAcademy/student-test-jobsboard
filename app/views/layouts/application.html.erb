<!DOCTYPE html>
<html>
<head>
  <%= javascript_include_tag 'application' %>
  <%= stylesheet_link_tag 'application' %>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />
  <%= csrf_meta_tag %>
</head>
<body>
  <div id="header">
    <nav>
        <div class="nav-wrapper grey darken-3">
            <a href="#!" class="brand-logo left">NEXT Academy Employment Portal</a>
            <ul class="right">
                <li><a href="/">Partner Companies</a></li>
                <li><a href="/jobs">Open Jobs</a></li>
                <!-- Dropdown Trigger -->
                <li><a class="dropdown-button" href="#!" data-activates="dropdown" data-beloworigin="true">Account<i class="mdi-navigation-arrow-drop-down right"></i></a></li>
            </ul>
        </div>
    </nav>
    <!-- Dropdown Structure -->
    <ul id="dropdown" class="dropdown-content collection">
        <% if signed_in? -%>
          <li class="collection-item">
            <%= link_to t(".sign_out"), sign_out_path, method: :delete %>
          </li>
        <% else -%>
          <li class="collection-item">
            <%= link_to t(".sign_in"), sign_in_path %>
          </li>
          <li class="collection-item">
            <%= link_to t(".sign_up"), sign_up_path %>
          </li>
        <% end -%>
    </ul>
  </div>

  <div class="container">
    
    <div id="flash">
      <% flash.each do |key, value| -%>
        <div id="flash_<%= key %>"><%=h value %></div>
      <% end %>
    </div>

    <%= yield %>

  </div>
</body>
</html>
