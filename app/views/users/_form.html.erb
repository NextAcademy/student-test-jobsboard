<div class="text-field">
  <%= form.label :email %>
  <%= form.text_field :email, type: 'email' %>
</div>

<div class="password-field">
  <%= form.label :password %>
  <%= form.password_field :password %>
</div>

<div class="role-field">
  <%= form.label :role %>
  <%= form.select(:role, ['employer', 'student'], {}, {:class => 'dropdown' }) %>
</div>